{
  "title": "Terminal.app → Neovim panes (Cmd+H/J/K/L)",
  "rules": [
    {
      "description": "Terminal.app: Cmd+H/J/K/L → Ctrl+B then h/j/k/l (Neovim panes)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": [
                "right_control"
              ]
            },
            {
              "key_code": "h"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$"
              ]
            }
          ]
        },
        {
          "type": "basic",
